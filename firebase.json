  { "source": "/instagram",  "destination": "/?utm_source=instagram&utm_medium=social_bio", "type": 301 },
  { "source": "/tiktok",     "destination": "/?utm_source=tiktok&utm_medium=social_bio", "type": 301 },
  { "source": "/pinterest",  "destination": "/?utm_source=pinterest&utm_medium=social_bio", "type": 301 },
  { "source": "/youtube",    "destination": "/?utm_source=youtube&utm_medium=social_bio", "type": 301 },
  { "source": "/twitch",     "destination": "/?utm_source=twitch&utm_medium=social_bio", "type": 301 },
